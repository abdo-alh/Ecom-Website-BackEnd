{% extends "base.html.twig" %}

{% block title %}Thank You !
{% endblock %}

{% block body %}

	{% include "home/header.html.twig" %}

	<!-- Breadcrumbs -->
	<div class="breadcrumbs">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="bread-inner">
						<ul class="bread-list">
							<li>
								<a href="index1.html">Home<i class="ti-arrow-right"></i>
								</a>
							</li>
							<li class="active">
								<a href="blog-single.html">Thank You</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- End Breadcrumbs -->

	<!-- Start Checkout -->
	<section class="shop checkout section">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 col-12">
					<div class="checkout-form">
						<h2>Make Your Checkout Here</h2>
						<p>Please register in order to checkout more quickly</p>
						<div class="row">
							<div class="col-lg-6 col-md-6 col-12">
								<div class="form-group">
									<label>First Name
									</label>
									{{ order.firstName }}
								</div>
							</div>
							<div class="col-lg-6 col-md-6 col-12">
								<div class="form-group">
									<label>Last Name
									</label>
									{{ order.lastName }}
								</div>
							</div>
							<div class="col-lg-6 col-md-6 col-12">
								<div class="form-group">
									<label>Email Address
									</label>
									{{ order.email }}
								</div>
							</div>
							<div class="col-lg-6 col-md-6 col-12">
								<div class="form-group">
									<label>Phone Number
									</label>
									{{ order.phone }}
								</div>
							</div>
							<div class="col-lg-6 col-md-6 col-12">
								<div class="form-group">
									<label>Country
									</label>
									{{ order.country.name }}
								</div>
							</div>
							<div class="col-lg-6 col-md-6 col-12">
								<div class="form-group">
									<label>City
									</label>
									{{ order.city.name }}
								</div>
							</div>
							<div class="col-lg-6 col-md-6 col-12">
								<div class="form-group">
									<label>Address Line 1
									</label>
									{{ order.firstAdress }}
								</div>
							</div>
							<div class="col-lg-6 col-md-6 col-12">
								<div class="form-group">
									<label>Address Line 2
									</label>
									{{ order.secondAdress }}
								</div>
							</div>
							<div class="col-lg-6 col-md-6 col-12">
								<div class="form-group">
									<label>Postal Code
									</label>
									{{ order.postalCode }}
								</div>
							</div>
						</div>
						<!--/ End Form -->
					</div>
				</div>
				<div class="col-lg-4 col-12">
					<div
						class="order-details">
						<!-- Order Widget -->
						<div class="single-widget">
							<h2>AMOUNT TOTAL</h2>
							<div class="content">
								<ul>
									<li class="last">Total<span>${{ order.orderTotal }}</span>
									</li>
								</ul>
							</div>
						</div>
						<!--/ End Order Widget -->
						<!-- Button Widget -->
						<div class="single-widget get-button">
							<div class="content">
								<div class="button">
									<a href="{{ path('home') }}" class="btn">Back To Home</a>
								</div>
							</div>
						</div>
						<!--/ End Button Widget -->
					</div>
				</div>
			</div>
		</div>
	</section>
	<!--/ End Checkout -->

	{% include "home/footer.html.twig" %}

{% endblock %}
