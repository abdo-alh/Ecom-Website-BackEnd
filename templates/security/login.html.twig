{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	{% if error %}
		<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	{% if app.user %}
		<div class="mb-3">
			You are logged in as
			{{ app.user.username }},
			<a href="{{ path('app_logout') }}">Logout</a>
		</div>
	{% endif %}
	<div class="row">
		<div class="col-md-8 mx-auto card-login">
			<div class="card-group">
				<div class="card p-4">
					<div class="card-body">
						<form method="post">
							<h1>Se Connecter</h1>
							<p class="text-muted">Connectez-vous à votre compte !</p>
							<div class="input-group mb-3">
								<div class="input-group-prepend">
									<span class="input-group-text">
										<i class="icon-user"></i>
									</span>
								</div>
								<input class="form-control" value="{{ last_username }}" name="_username" placeholder="mail@gmail.com" required type="email">
							</div>
							<div class="input-group mb-4">
								<div class="input-group-prepend">
									<span class="input-group-text">
										<i class="icon-lock"></i>
									</span>
								</div>
								<input class="form-control" name="_password" placeholder="*******" required type="password">
							</div>
							<div class="input-group mb-4">
								<input type="checkbox" id="remember_me" name="_remember_me" checked/>
								<label for="remember_me">Keep me logged in</label>
							</div>
							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
							<div class="row">
								<div class="col-6">
									<button type="submit" class="btn btn-primary px-4">Connecter</button>
								</div>
								<div class="col-6 text-right">
									<a href="{{ path('forgot_password') }}">
										<button type="button" class="btn btn-link px-0">Mot de passe oublié?</button>
									</a>
								</div>
							</div>
						</form>
					</div>
				</div>
				<div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
					<div class="card-body text-center">
						<div>
							<h2>S'inscrire</h2>
							<a href="{{ path('register') }}">
								<button type="submit" class="btn btn-primary active mt-3">S'inscrire maintenant!</button>
								<a class="btn btn-primary active mt-3" href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook' }) }}">
									<span>Login with Facebook</span>
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endblock %}
